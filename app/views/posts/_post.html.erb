<div class="panel panel-primary">
    <div class="panel-heading">
        <%= link_to post_path(post), class: 'post-link' do %>
            <%= post.title %>
        <% end %>
    </div>
    <div class="panel-body">
        <%= post.body %>
    </div>
</div>
<div class='posts-actions'>
    <%= link_to 'Destroy', post_path(post), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Edit', edit_post_path(post), class: "btn btn-success" %>
</div>